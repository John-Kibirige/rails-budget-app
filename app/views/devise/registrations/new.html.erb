 <div class=" bg-zei-blue text-slate-100 flex items-center py-5 px-4">
    <%= link_to 'javascript:history.go(-1);', class: 'block' do %>
      <svg
        class=" fill-slate-50 w-7 hover:border hover:cursor-pointer p-1"
        viewBox="0 0 1024 1024"
        xmlns="http://www.w3.org/2000/svg">
        <path
          d="M222.927 580.115l301.354 328.512c24.354 28.708 20.825 71.724-7.883 96.078s-71.724 20.825-96.078-7.883L19.576 559.963a67.846 67.846 0 01-13.784-20.022 68.03 68.03 0 01-5.977-29.488l.001-.063a68.343 68.343 0 017.265-29.134 68.28 68.28 0 011.384-2.6 67.59 67.59 0 0110.102-13.687L429.966 21.113c25.592-27.611 68.721-29.247 96.331-3.656s29.247 68.721 3.656 96.331L224.088 443.784h730.46c37.647 0 68.166 30.519 68.166 68.166s-30.519 68.166-68.166 68.166H222.927z" />
      </svg>
    <% end %>
    <h1 class="text-2xl font-semi-bold tracking-wider uppercase text-center grow">register</h1>
</div>

<section class="p-5">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name", class: "w-full mb-3 py-2" %>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "w-full mb-3 py-2" %>
    </div>

    <div class="field">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "w-full mb-3 py-2" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "w-full mb-3 py-2" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" , class: 'text-lg font-semi-bold hover:text-zei-blue' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</section>