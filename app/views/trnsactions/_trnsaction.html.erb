<div class=" mb-5">
  <% transaction_categories.each do |t_category|%>
    <div class="mb-4 flex justify-between bg-white border p-2 rounded mx-3">
      <div>
        <p class="">
          <strong class="block font-medium mb-1"> <%= t_category.trnsaction.name.capitalize %></strong>
        </p>
        <small>Transaction id: <%= t_category.trnsaction.created_at.strftime('%s%L')%></small>
        <p><%= t_category.trnsaction.created_at.strftime('%I:%M %p').downcase %></p>
      </div>
      <p class="my-5">
        <strong class="block font-medium mb-1"><%= t_category.trnsaction.amount %></strong>
      </p>
    </div>
  <% end %>
</div>
