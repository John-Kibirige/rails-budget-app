<div id="<%= dom_id ctegory %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= ctegory.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Icon:</strong>
    <%= ctegory.icon %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this ctegory", ctegory, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this ctegory', edit_ctegory_path(ctegory), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
